<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="pe.edu.upeu.calcfx.control.TictacControl" alignment="CENTER" hgap="10" vgap="10">
    <!-- Botones para el juego -->
    <Button fx:id="btn00" onAction="#accionButon" prefHeight="100.0" prefWidth="100.0" />
    <Button fx:id="btn01" onAction="#accionButon" prefHeight="100.0" prefWidth="100.0" />
